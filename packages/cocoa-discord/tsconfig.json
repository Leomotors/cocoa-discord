{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*"]
}
