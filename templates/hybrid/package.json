{
    "name": "@cocoa-discord/template-hybrid",
    "version": "1.0.0",
    "description": "Template Discord Bot using Cocoa Discord (Has both message and slash commands)",
    "main": "dist/bot.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist/*",
        "start": "node --es-module-specifier-resolution=node dist/bot.js",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint src && prettier --check \"src/**/*.ts\""
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "eslint": "^8.39.0",
        "prettier": "^2.8.8",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "cocoa-discord-utils": "^2.3.0",
        "discord.js": "^14.9.0",
        "dotenv": "^16.0.3"
    }
}
